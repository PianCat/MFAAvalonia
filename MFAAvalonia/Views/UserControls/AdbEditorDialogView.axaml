<UserControl
    MinHeight="285"
    MinWidth="350"
    d:DesignHeight="350"
    mc:Ignorable="d"
    x:Class="MFAAvalonia.Views.UserControls.AdbEditorDialogView"
    x:DataType="usersControls:AdbEditorDialogViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fluent="clr-namespace:FluentIcons.Avalonia.Fluent;assembly=FluentIcons.Avalonia.Fluent"
    xmlns:helper="clr-namespace:MFAAvalonia.Helper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:suki="https://github.com/kikipoulet/SukiUI"
    xmlns:usersControls="clr-namespace:MFAAvalonia.ViewModels.UsersControls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <suki:GroupBox>
        <suki:GroupBox.Header>
            <TextBlock
                FontWeight="DemiBold"
                Margin="8,8,0,0"
                Text="{I18N {x:Static helper:LangKeys.AdbEditor}}" />
        </suki:GroupBox.Header>
        <StackPanel>
            <TextBlock
                FontSize="12"
                Foreground="{DynamicResource SukiLowText}"
                Margin="8,0,0,0"
                Text="{I18N {x:Static helper:LangKeys.AdbName}}" />
            <TextBox Text="{Binding AdbName}" />
            <TextBlock
                FontSize="12"
                Foreground="{DynamicResource SukiLowText}"
                Margin="8,0,0,0"
                Text="{I18N {x:Static helper:LangKeys.AdbPath}}" />
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="55" />
                </Grid.ColumnDefinitions>
                <TextBox
                    DragDrop.AllowDrop="True"
                    DragDrop.DragOver="File_DragOver"
                    DragDrop.Drop="File_Drop"
                    Grid.Column="0"
                    Text="{Binding AdbPath}"
                    suki:TextBoxExtensions.AddDeleteButton="True" />
                <Button
                    Command="{Binding LoadCommand}"
                    Grid.Column="1"
                    Height="35"
                    Margin="0,0,5,0"
                    ToolTip.Placement="Right"
                    ToolTip.Tip="{I18N {x:Static helper:LangKeys.Load}}">
                    <fluent:FluentIcon
                        Height="25"
                        Icon="FolderArrowLeft"
                        IconSize="Size16"
                        Margin="-5,0,0,0" />
                </Button>
            </Grid>
            <TextBlock
                FontSize="12"
                Foreground="{DynamicResource SukiLowText}"
                Margin="8,0,0,0"
                Text="{I18N {x:Static helper:LangKeys.AdbSerial}}" />
            <TextBox Text="{Binding AdbSerial}" />
            <TextBlock
                FontSize="12"
                Foreground="{DynamicResource SukiLowText}"
                Margin="8,0,0,0"
                Text="{I18N {x:Static helper:LangKeys.AdbConfig}}" />
            <TextBox Text="{Binding AdbConfig}" />
            <Button
                Command="{Binding SaveCommand}"
                Content="{I18N {x:Static helper:LangKeys.ButtonSave}}"
                Margin="5,5,8,5" />
        </StackPanel>
    </suki:GroupBox>

</UserControl>